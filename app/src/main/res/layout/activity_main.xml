<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.klola.courtcounter.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Court Counter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="#FF7400"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team  A"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_margin="10sp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_margin="30sp"
                android:textSize="50sp"
                android:id="@+id/display_a"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 3 POINTS"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/a_tiga"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 2 POINTS"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/a_dua"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="free throw"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/a_free"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#e7e7e7"
            android:layout_weight="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team  b"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_margin="10sp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:layout_margin="30sp"
                android:textSize="50sp"
                android:id="@+id/display_b"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 3 POINTS"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/b_tiga"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 2 POINTS"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/b_dua"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="free throw"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10sp"
                android:background="#ffd500"
                android:layout_margin="5sp"
                android:id="@+id/b_free"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:padding="10sp"
            android:background="#ffd500"
            android:layout_marginTop="50sp"
            android:id="@+id/reset_semua"/>
    </LinearLayout>
</LinearLayout>
